{
  "manifest_version": 2,

  "name": "Countdown to Christmas",
  "description": "Countdown to Christmas!!",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
